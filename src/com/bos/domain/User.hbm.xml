<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.bos.domain.User" table="user" schema="aistorage">
        <id name="id">
            <column name="id" sql-type="varchar(11)" length="11"/>
        </id>
        <property name="username">
            <column name="username" sql-type="varchar(32)" length="32" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(32)" length="32" not-null="true"/>
        </property>
        <property name="gender">
            <column name="gender" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
        <property name="birth">
            <column name="birth" sql-type="date" not-null="true"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="varchar(11)" length="11" not-null="true"/>
        </property>
        <property name="address">
            <column name="address" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="remark">
            <column name="remark" sql-type="varchar(255)" not-null="true"/>
        </property>
        <!-- 命名查询语句 -->
        <query name="editPassword">
            UPDATE User SET password = ? where id = ?
        </query>
    </class>
</hibernate-mapping>